<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lighterbackground">


    <LinearLayout
        android:id="@+id/topviewWvW"
        android:layout_width="380dp"
        android:layout_height="54dp"
        android:background="@drawable/lighterbackground"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/list_icon"
            android:text="Button" />

        <TextView
            android:id="@+id/serverName"
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SERVER_NAME"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:text="SERVER_NAME" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_icon"
            android:text="Button" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="443dp"
        android:background="@drawable/blue"
        app:layout_constraintBottom_toTopOf="@+id/icons2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/icons2"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="@drawable/lighterbackground"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/companion2"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:background="@drawable/companion3"
            android:gravity="bottom|center"
            android:text="Companion"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/heroPanel2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Companion" />

        <Button
            android:id="@+id/heroPanel2"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:background="@drawable/gear1"
            android:gravity="bottom|center"
            android:text="Hero Panel"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/forums2"
            tools:text="Hero Panel" />

        <Button
            android:id="@+id/forums2"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:background="@drawable/gw2forums1"
            android:gravity="bottom|center"
            android:text="Forums"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/wvw2"
            tools:text="Forums" />

        <Button
            android:id="@+id/wvw2"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:background="@drawable/wvw2"
            android:gravity="bottom|center"
            android:text="WvW"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/more2"
            tools:text="WvW" />

        <Button
            android:id="@+id/more2"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:background="@drawable/more1"
            android:gravity="bottom|center"
            android:text="More"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="More" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>